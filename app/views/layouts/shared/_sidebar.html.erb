<%= stylesheet_link_tag "sidebar", media: 'all' %>

<div class="main-sidebar">
  <aside id="sidebar-wrapper">
    <div class="sidebar-brand">
      <%= link_to(root_path()) do %>
        <%= image_tag "logo.png", class: 'logo-img' %>
      <% end %>
    </div>
    <div class="sidebar-brand sidebar-brand-sm">
      <%= link_to(root_path()) do %>
        CRM
      <% end %>
    </div>
    <div class="sidebar-component">

      <ul class="sidebar-menu">
        <li class="<%= 'active' if request.path.include?('pipelines') or request.path.include?('deal') %>">
          <%= link_to(account_pipelines_path(current_user.account), class: 'nav-link') do %>
            <i class="fas fa-funnel-dollar"></i> <span>Neg√≥cios</span>
          <% end %>
        </li>

        <li class="<%= 'active' if request.path.include?('contact') %>">
          <%= link_to(account_contacts_path(current_user.account), class: 'nav-link') do %>
            <i class="fas fa-users"></i> <span>Contatos</span>
          <% end %>
        </li>

      </ul>
      <div class="dropdown-divider">
      </div>

    </div>
  </aside>
</div>